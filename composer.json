{
  "name": "phpsagas/message-id-generator",
  "type": "library",
  "description": "The implementation of saga message id generator",
  "keywords": ["identifier", "generator"],
  "homepage": "https://github.com/phpsagas/message-id-generator",
  "license": "MIT",
  "authors": [
    {
      "name": "Oleg Filatov",
      "email": "phpsagas@gmail.com"
    }
  ],
  "require": {
    "php": "^7.1 || ^8.0",
    "ramsey/uuid": "^4.1",
    "phpsagas/contracts": "^0.0"
  },
  "require-dev": {
    "squizlabs/php_codesniffer": "^3.3",
    "phpunit/phpunit": "^8.5"
  },
  "autoload": {
    "psr-4": {
      "PhpSagas\\MessageIdGenerator\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "PhpSagas\\MessageIdGenerator\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "tests": "./vendor/bin/phpunit tests/",
    "cs": "./vendor/bin/phpcs"
  }
}
